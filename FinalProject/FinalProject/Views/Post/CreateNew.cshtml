@model DatabaseConnector.DTO.Post.CreatePostDTO

@{
    ViewData["Title"] = "CreateNew";
}

<h1>CreateNew</h1>

<div class="row">
    <div>
        <form asp-action="CreateNew">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <select class="form-select" aria-label="Default select example" name="Category">
                    <option selected value="IT">IT</option>
                    <option value="Marketing">Marketing</option>
                    <option value="Design">Design</option>
                    <option value="Mobile Development">Mobile Development</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" cols="100" rows="25"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>