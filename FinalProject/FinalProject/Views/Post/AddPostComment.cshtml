@model DatabaseConnector.DTO.Post.ContentDTO

<hr/>
<div class="row">
    <div>
        <form asp-action="AddPostComment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="PostId" value="@ViewData["PostId"]"/>
            </div>
            <div class="form-group">
                <input asp-for="CreationDate" type="hidden" value="@DateTime.Now" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="IsVisible" value="true"/>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label">Добавить комментарий</label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
