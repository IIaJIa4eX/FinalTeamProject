@using DatabaseConnector;
@using FinalProject.Services;
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Registration";
}

@if (@User.Identity.IsAuthenticated)
{
    <a type="button" class="btn btn-outline-success" asp-controller="Post" asp-action="CreateNew" method="get" title="NewPost">Создать</a>
    <ul class="navbar-nav">
        <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="AccountPage" asp-action="Details" method="get" title="Manage">@User.Identity?.Name</a>
        </li>
        <li class="nav-item">
                <form class="form-inline" asp-controller="User" asp-action="LogOut" method="get">
                <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="User" asp-action="Registration" method="get">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="User" asp-action="Login" method="get">Login</a>
        </li>
    </ul>
}
